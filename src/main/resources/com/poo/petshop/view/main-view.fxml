<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="root" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.poo.petshop.controller.MainController"
      alignment="CENTER" spacing="20">

    <padding>
        <Insets top="40" right="30" bottom="40" left="30"/>
    </padding>

    <Label text="PetShop - Menu Principal"
           style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

    <Separator/>

    <GridPane hgap="15" vgap="15" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints percentWidth="50.0" />
            <ColumnConstraints percentWidth="50.0" />
        </columnConstraints>

        <Button text="Listagem de Tutores" onAction="#abrirTelaTutor"
                style="-fx-font-size: 16px; -fx-padding: 10 30; -fx-pref-width: 250;"
                GridPane.rowIndex="0" GridPane.columnIndex="0"/>

        <Button text="Listagem de Animais" onAction="#abrirTelaAnimal"
                style="-fx-font-size: 16px; -fx-padding: 10 30; -fx-pref-width: 250;"
                GridPane.rowIndex="1" GridPane.columnIndex="0"/>

        <Button text="Cadastro de Funcionários" onAction="#abrirTelaCadastroFuncionario"
                style="-fx-font-size: 16px; -fx-padding: 10 30; -fx-pref-width: 250;"
                GridPane.rowIndex="2" GridPane.columnIndex="0"/>

        <Button text="Listagem de Funcionários" onAction="#abrirTelaListagemFuncionarios"
                style="-fx-font-size: 16px; -fx-padding: 10 30; -fx-pref-width: 250;"
                GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Button text="Atendimento Atendente" onAction="#abrirAtendimentoAtendente"
                style="-fx-font-size: 16px; -fx-padding: 10 30; -fx-pref-width: 250;"
                GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Button text="Atendimento Veterinário" onAction="#abrirAtendimentoVeterinario"
                style="-fx-font-size: 16px; -fx-padding: 10 30; -fx-pref-width: 250;"
                GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Button text="Sair" onAction="#sairAplicacao"
                style="-fx-font-size: 16px; -fx-padding: 10 30; -fx-pref-width: 250; -fx-background-color: #cc3333; -fx-text-fill: white;"
                GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>

    </GridPane>
</VBox>